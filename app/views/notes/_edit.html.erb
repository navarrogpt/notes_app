<div id="note-editor-title">
	<%=@note.title%>
</div>

<div id="note-editor-toolbar">
</div>

<div id="note-editor-date-time">
	<%=@note.created_at.strftime("%A #{@note.created_at.day.ordinalize} %B %Y %I:%M%p") if @note.created_at %>
</div>

<div id="note-editor-editor">
	<% semantic_form_for @note, :html => { :id => 'update_content_form'} do |form| %>
		<%= form.cktext_area :content, :toolbar=>'Easy', :width=>'720px', :height=>'450px' %>
		<button id="note_submit" onclick="return updateNote(this.form);">Update</button>
	<% end %>
</div>

<div id="edit-status"></div>

<div id="note-editor-delete">
	<a href="/notes/destroy/<%=@note.id%>" onclick="return deleteNote(this, '#notes-listing-item-<%=@note.id%>');">
		<img src="/images/delete_this_note_button.gif" id="delete-this-note-button" name="delete_note" class="header-button-set"/>
	</a>
</div>

<script type="text/javascript">

	// updates a note
	function updateNote(form){
		$('#' + form.id).submit(function() {
			var path = $('#' + form.id).attr("action");
			var params = $('#' + form.id).serialize();
			$.post(path, params, function(data) {
				if(data.success){
					$('#edit-status').html("Updated");
				}
				else
				{
					
				}
			}, "json");
			return false;
		});
		false;
	}
	
	
</script>